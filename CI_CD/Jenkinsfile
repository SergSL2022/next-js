pipeline {
    agent{
        label "netx-serg"
    }

    stages{
        stage("Install"){
            steps{
                sh """
                    cd /home/serg/webapps/next.slipchuk.site
                    pwd
                    ls -la
                    git pull
                    npm install
                """
            }
        }
        stage("Build"){
            steps{
                sh """
                    npm run build
                """
            }
        }
        stage("Start"){
            steps{
                sh """
                    pm2 restart next.slipchuk.site
                """
            }
        }
    }
}